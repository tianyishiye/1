	 for(int y=1;y<s.length()-1;y++){
	  int z=y%7;
	 if(z==0){
	  if(y%2==1){
	   System.out.print(s.substring(y-7, y)+",");
	  }
	  if(y%2==0){
	   System.out.println(s.substring(y-7,y)+".");
